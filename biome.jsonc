{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
    },
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always",
    },
  },
}
